<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SmallTagView">

        <attr name="textPaddingLeft" format="dimension|reference" />
        <attr name="textPaddingRight" format="dimension|reference" />
        <attr name="textPaddingTop" format="dimension|reference" />
        <attr name="textPaddingBottom" format="dimension" />
        <attr name="tagBackground" format="color|reference" />

        <attr name="tagRadius" format="dimension|integer" />
        <!--水平的间隔-->
        <attr name="tagHorizontalDivider" format="dimension|reference" />
        <!--竖直方向的间隔-->
        <attr name="tagVerticalDivider" format="dimension|reference" />

        <!--显示的最大Tag数-->
        <attr name="maxTagNum" format="integer|reference" />
        <attr name="android:textSize" format="dimension|integer" />
        <attr name="android:textColor" format="color"/>
        <attr name="android:maxLines" format="integer"/>

    </declare-styleable>
</resources>