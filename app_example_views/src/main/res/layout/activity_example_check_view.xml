<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:kennie="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".ExampleCheckViewActivity">

    <com.kennie.views.CheckView
        android:id="@+id/main_activity_check_view1"
        android:layout_width="32dp"
        android:layout_margin="@dimen/dp_10"
        android:layout_height="32dp" />


    <com.kennie.views.CheckView
        android:id="@+id/main_activity_check_view2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="@dimen/dp_10"
        app:cv_enable_bg="true"
        app:cv_enable_border="false"
        app:cv_tick_color="@android:color/white" />

    <com.kennie.views.CheckView
        android:id="@+id/main_activity_check_view3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="@dimen/dp_10"

        app:cv_mode="square" />

    <com.kennie.views.CheckView
        android:id="@+id/main_activity_check_view4"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="@dimen/dp_10"
        app:cv_enable_bg="true"
        app:cv_enable_border="false"
        app:cv_mode="square"
        app:cv_tick_color="@android:color/white" />

</LinearLayout>