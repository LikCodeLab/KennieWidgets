<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kennie.example.views">

    <application
        android:name=".AppApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar">

        <activity
            android:name=".MainExampleActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- 0.演示控件(Widget) -->
        <activity
            android:name=".ui.widget.WidgetExampleActivity"
            android:label="@string/example_widget" /> <!-- 1.演示勾选(CheckView) -->
        <activity
            android:name=".ui.ExampleCheckViewActivity"
            android:label="@string/example_check_view" /> <!-- 2.演示标签(LabelTagLayout) -->
        <activity
            android:name=".ui.ExampleLabelTagLayoutActivity"
            android:label="@string/example_label_tag_layout_view" />
        <activity android:name=".ui.label.TagShapeActivity" />
        <activity android:name=".ui.label.TagChoiceActivity" />
        <activity android:name=".ui.label.TagEditActivity" />
        <activity android:name=".ui.label.TagChangeActivity" />
        <activity android:name=".ui.label.TagViewActivity" />
        <activity android:name=".ui.label.TagReverseActivity" /> <!-- 1.3 演示状态切换(StateLayout) -->
        <activity android:name=".ui.state.ExampleStateActivity" />
    </application>

</manifest>